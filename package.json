    "db:migrate": "bunx drizzle-kit migrate",
    "bootstrap:admin-key": "bun run src/bootstrap-admin-key.ts"
  },
  "dependencies": {
    "fastify": "^5.7.4",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@types/node": "^22.12.0",
    "bun-types": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.9.3"
  }
}
